{
  "compilerOptions": {
    "target": "es2019",  // vers√£o do javascript 
    "module": "commonjs", 
    "moduleResolution": "node", //Forma que o modulo sera resolvido 
    "rootDir": "src", // Pasta de root onde vai estar os typescripts :) 
    "typeRoots": [
      "./src/@types",
      ".node_modules/@types"
    ],
    "outDir": "./dist", //onde vai o codigo traspilado fica a biuld
    "removeComments": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true 
  }
}